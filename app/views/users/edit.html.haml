#users-edit.container
  .row
    .col-md-12
      %h1 Edit user
  .row
    = form_for @user, html: {class: 'form-horizontal'} do |f|
      - if @user.errors.any?
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
      .form-group
        = f.label :name, class: 'col-sm-1 control-label'
        .col-sm-10
          = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :age, class: 'col-sm-1 control-label'
        .col-sm-10
          = f.text_field :age, class: 'form-control'
      .form-group
        = f.label :image, class: 'col-sm-1 control-label'
        .col-sm-10
          = f.file_field :image, class: 'form-control'
      .form-group
        .col-sm-offset-1.col-sm-11
          = f.button :submit, class: 'btn btn-primary' do
            Update
